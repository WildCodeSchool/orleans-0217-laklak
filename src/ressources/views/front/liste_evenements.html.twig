{% extends 'layout.html.twig' %}
{% block title %}liste évènements{{ parent() }}{% endblock %}

{% block content %}

    <div class="container clearfix list_event">

        <div class="fancy-title title-border">
            <h3>EVENEMENTS</h3>
        </div>
        {% for year, events in eventsYear %}

            <div class="year">
                    <h2 class="uppercase nobottommargin">{{ year }}</h2>
            </div>
            <div class="row">

            {% for event in events %}
            <div class="col-sm-6 col-md-3 thumbnail bottommargin">
                <div class="feature media-box">
                    <div class="fbox-media">
                        <div class="image_list_event" style="background-image:url('{{ event.eventImgProfilePath }}')">
                            <img class="img_list_event" src="{{ event.eventImgProfilePath }}" alt="{{ event.eventName }}"/>
                            <h3 class="nom_list_event">{{ event.eventName|upper }}</h3>
                        </div>
                        <div class="i-overlay on-hover">
                            <a href="?page=evenements&id={{ event.id }}">
                                <i class ="icon-line-plus"></i>
                            </a>

                        </div>
                    </div>
                    <div class="fbox-desc">
                        {% if event.eventLaklak == 1 %}<img class="list_label_laklak" src="images/Laklak/logo.jpg" alt=""/>{% endif %}
                        {% if event.eventLaklak == 0 %}{% endif %}
                    </div>
                </div>
            </div>
            {% endfor %}
            </div>
        {% endfor %}



    </div>


{% endblock %}