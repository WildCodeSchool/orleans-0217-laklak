{% extends 'layout.html.twig' %}
{% block title %}Evènement{{ parent() }}{% endblock %}

{% block content %}

    {{ dump(event) }}
    {{ dump(galerie) }}

    <!--debut cover-->
    <div class="container hidden-xs">
        <div class=row">
            <div class="portfolio-image img-responsive">
                <img src="{{ event.eventImgCoverPath }}" alt="Portfolio Title">


            </div>
        </div>
    </div>

    <!--fin cover-->

    <!--debut container-->
    <div class="container">
        <div class=row">
            <div class="haut">
                <h1 class="visible-xs">{{ event.eventName }}</h1>
                <div class="col-sm-4 bottommargin">
                    <div class="fbox-media clearfix bio thumbnail">

                        <a href="#"><img src="{{ event.eventImgProfilePath }}" alt="{{ event.eventName }}"></a>
                            <div class="detail_artiste">
                            {% if event.eventLaklak == 1 %}<img src="images/Laklak/logo.jpg" alt=""/>{% endif %}
                            {% if event.eventLaklak == 0 %}{% endif %}
                            </div>

                    </div>

                    <!--reseaux sociaux et site web-->
                    <div class="row">

                               <div class="social col-xs-12">
                                <a href="{{ event.eventWebsiteUrl }}">
                                    {% if event.eventWebsiteUrl =='' %}
                                    {% else %}
                                    <button class="button button-large button-border button-rounded tright nomargin"
                                    type="submit" id="#" name="siteArtiste">Site de l'evenement</button>
                                    {% endif %}
                                </a>
                            </div>

                        <div class="col-sm-12 bottommargin-sm">
                            {% if event.eventFacebookUrl =='' %}
                            {% else %}
                                <a href="{{ event.eventFacebookUrl }}" target="_blank" class="social-icon si-dark si-colored si-facebook nobottommargin" style="margin-right: 10px;">
                                <i class="icon-facebook"></i>
                                </a>
                            {% endif %}

                            {% if event.eventTwitterUrl =='' %}
                            {% else %}
                                <a href="{{ event.eventTwitterUrl }}" target="_blank" class="social-icon si-dark si-colored si-twitter nobottommargin" style="margin-right: 10px;">
                                <i class="icon-twitter"></i>
                                </a>
                            {% endif %}

                            {% if event.eventSoundcloudUrl =='' %}
                            {% else %}
                                <a href="{{ event.eventSoundcloudUrl }}" target="_blank" class="social-icon si-dark si-colored si-soundcloud nobottommargin" style="margin-right: 10px;">
                                    <i class="icon-soundcloud"></i>
                                </a>
                            {% endif %}

                        </div>
                    </div>

                    <!--fin reseaux sociaux et site web-->


                    <!--video youtube-->

                    {% if event.eventIframeYoutube =='' %}
                    {% else %}
                         <div class="bio thumbnail video hidden-xs"><iframe width="100%" height="315" src="{{ event.eventIframeYoutube }}" frameborder="0" allowfullscreen></iframe>
                         </div>
                    {% endif %}
                    <!--video youtube-->


                </div>
            </div>

            <!--fin bloc gauche-->

            <!--debut titre evenement-->
            <div class="col-sm-8">
                <h1 class="hidden-xs">{{ event.eventName }}</h1>
                <div class="bio thumbnail">
                    <h2>{{ event.eventlocation }}</h2>
                    <h3>{{ event.eventartistes|raw}}</h3>
                    <h4>{{ event.eventdate|date('d/m/Y') }}</h4>
                </div>



                <!--fin titre evenement-->

                <!--debut bloc description-->
                {% if event.eventdescription =='' %}
                {% else %}
                <div class="bio thumbnail"><h3>Description</h3>
                    <p>{{ event.eventdescription|raw }}</p>
                </div>
                {% endif %}

                <!--fin bloc description-->


                <!--debut bloc productions-->
                {% if event.eventproduction =='' %}
                {% else %}
                <div class="bio thumbnail"><h3>Productions</h3>
                    <p>{{ event.eventproduction|raw}}</p>
                </div>
                {% endif %}

                <!--fin bloc productions-->




                <!--début galerie photo-->
                <div class="col_full clearfix">
                    <h3>Galerie</h3>

                    <div class="masonry-thumbs col-4" data-big="1" data-lightbox="gallery">
                        {% for image in galerie %}
                        <a href="{{ image.eventimggalerrypath }}" data-lightbox="gallery-item"><img class="image_fade" src="{{ image.eventimggalerrypath }}" alt="Gallery Thumb {{ image.id }}"></a>
                        {% endfor %}
                        <a href="images/photoartistes/2016/habibifunk.jpg" data-lightbox="gallery-item"><img class="image_fade" src="images/photoartistes/2016/habibifunk.jpg" alt="Gallery Thumb 1"></a>
                        <a href="images/photoartistes/2017/saisons-encore/habibifunk/habibifunk1.png" data-lightbox="gallery-item"><img class="image_fade" src="images/photoartistes/2017/saisons-encore/habibifunk/habibifunk1.png" alt="Gallery Thumb 2"></a>
                        <a href="images/photoartistes/2017/saisons-encore/habibifunk/habibifunk2.png" data-lightbox="gallery-item"><img class="image_fade" src="images/photoartistes/2017/saisons-encore/habibifunk/habibifunk2.png" alt="Gallery Thumb 3"></a>
                        <a href="images/photoartistes/2017/saisons-encore/habibifunk/habibifunk3.jpg" data-lightbox="gallery-item"><img class="image_fade" src="images/photoartistes/2017/saisons-encore/habibifunk/habibifunk3.jpg" alt="Gallery Thumb 4"></a>
                        <a href="images/photoartistes/2017/saisons-encore/habibifunk/habibifunk4.jpg" data-lightbox="gallery-item"><img class="image_fade" src="images/photoartistes/2017/saisons-encore/habibifunk/habibifunk4.jpg" alt="Gallery Thumb 5"></a>
                        <a href="images/photoartistes/2017/saisons-encore/habibifunk/habibifunk5.jpg" data-lightbox="gallery-item"><img class="image_fade" src="images/photoartistes/2017/saisons-encore/habibifunk/habibifunk5.jpg" alt="Gallery Thumb 6"></a>
                        <a href="images/photoartistes/2017/saisons-encore/habibifunk/habibifunk6.jpg" data-lightbox="gallery-item"><img class="image_fade" src="images/photoartistes/2017/saisons-encore/habibifunk/habibifunk6.jpg" alt="Gallery Thumb 7"></a>
                        <a href="images/photoartistes/2017/saisons-encore/habibifunk/habibifunk7.jpg" data-lightbox="gallery-item"><img class="image_fade" src="images/photoartistes/2017/saisons-encore/habibifunk/habibifunk7.jpg" alt="Gallery Thumb 8"></a>
                    </div>

                    <div class="divider"><i class="icon-circle"></i></div>
                </div>
                <!--fin galerie photo-->
            </div>

        </div>
    </div>



{% endblock %}