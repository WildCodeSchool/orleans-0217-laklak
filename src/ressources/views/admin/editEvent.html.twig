{% extends 'layout.html.twig' %}

{% block content %}

    <h1>évènement:{{ event.eventName }}</h1>
    <div class="container-fluid">
        <div class="row col-xs-9">
            <form method="POST" name="updateEvent" action="?page=updateEvent">

                <div class="form-group">
                    <label for="nom">Nom</label>
                    <input type="text" class="form-control" name="nom" id="nom" name="nom" value="{{ event.eventName }}">
                </div>

                <div class="form-group">
                    <label for="lieu">Lieu</label>
                    <input type="text" class="form-control" name="lieu" id="lieu" value="{{ event.eventLocation }}">
                </div>

                <div class="form-group">
                    <label for="date">Date</label>
                    <input type="text" class="form-control" name="date" id="date" value="{{ event.eventDate }}">
                </div>

                <div class="form-group">
                    <label for="artistes">Artistes de l'évènement</label>
                    <textarea cols="70" class="ckeditor" rows="10" class="form-control" name="artistes" id="artistes" value="{{ event.eventArtistes }}">{{ event.eventArtistes }}</textarea>
                </div>

                <div class="form-group">
                    <label for="description">Description de l'évènement</label>
                    <textarea cols="70" class="ckeditor" rows="10" class="form-control" name="description" id="description" value="{{ event.eventDescription }}">{{ event.eventDescription }}</textarea>
                </div>

                <div class="form-group">
                    <label for="idArtiste">identifiant de l'artiste</label>
                    <input type="text" class="form-control" id="idArtiste" name="idArtiste" placeholder="idArtiste" value="{{ event.eventIdArtiste }}">
                </div>

                <div class="form-group">
                    <label for="production">Productions</label>
                    <textarea cols="70" class="ckeditor" rows="10" class="form-control" name="production" id="production" value="{{ event.eventProduction }}">{{ event.eventProduction }}</textarea>
                </div>

                <div class="form-group">
                    <label for="websiteUrl">website url</label>
                    <input type="url" class="form-control" id="websiteUrl" name="websiteUrl" value="{{ event.eventWebsiteUrl }}">
                </div>

                <div class="form-group">
                    <label for="facebookUrl">Facebook url</label>
                    <input type="url" class="form-control" name="facebookUrl" id="facebookUrl" value="{{ event.eventFacebookUrl }}">
                </div>

                <div class="form-group">
                    <label for="twitterUrl">Twitter url</label>
                    <input type="url" class="form-control" name="twitterUrl" id="twitterUrl" value="{{ event.eventTwitterUrl }}">
                </div>

                <div class="form-group">
                    <label for="soundcloudUrl">Soundcloud url</label>
                    <input type="url" class="form-control" name="soundcloudUrl" id="soundcloudUrl" value="{{ event.eventSoundcloudUrl }}">
                </div>

                <div class="form-group">
                    <label for="iframeSoundcloud">Iframe Soundcloud <i class="icon-soundcloud"></i></label>
                    <input type="url" class="form-control" id="iframeSoundcloud" name="iframeSoundcloud" value="{{ event.eventIframeSoundcloud }}">
                </div>

                <div class="form-group">
                    <label for="iframeYoutube">Iframe Youtube <i class="icon-youtube"></i></label>
                    <input type="url" class="form-control" name="iframeYoutube" id="iframeYoutube" value="{{ event.eventIframeYoutube }}">
                </div>

                <h4>Evènement Laklak</h4>
                <div class="radio">
                    <input type="radio" name="laklak" id="oui" value="1"{% if event.eventLaklak == 1 %}checked="checked"{% endif %} >Oui</label>
                    <input type="radio" name="laklak" id="non" value="0" {% if event.eventLaklak == 0 %}checked="checked"{% endif %}>Non</label>
                </div>

                <div class="form-group">
                    <label for="imgEvenement">Photo profil évènement</label>
                    <input type="file" name="imgEvenement" id="imgEvenement" value="{{ event.eventImgEvenement }}">
                </div>

                <div class="form-group">
                    <label for="imgCoverEvenement">Photo couverture évènement</label>
                    <input type="file" name="imgCoverEvenement" id="imgCoverEvenement" value="{{ event.eventImgCoverEvenement }}>
                </div>

                <div>
                    <label for="type">Type évènement</label>
                    <select class="selectpicker" title="Choisir un type" name="type">
                        <option value="private" {% if event.eventType == private %}selected{% endif %}>private</option>
                        <option value="titi"{% if event.eventType == titi %}selected{% endif %}>type 2</option>
                        <option value="toto"{% if event.eventType == toto %}selected{% endif %}>type 3</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="moreUrl">more url</label>
                    <input type="url" class="form-control" id="moreUrl" name="moreUrl" value="{{ event.eventMoreUrl }}">
                </div>

                <div class="form-group">
                    <label for="bookingUrl">booking url</label>
                    <input type="url" class="form-control" id="bookingUrl" name="bookingUrl" value="{{ event.eventBookingUrl }}">
                </div>
                <input type="hidden" name="id" value="{{ event.id }}">
                <input class="btn btn-success" type="submit" name="updateEvent" value="Modifier">

            </form>
        </div>

    </div>

{% endblock %}